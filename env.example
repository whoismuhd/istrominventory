# Environment Configuration for Istrom Inventory Management System

# Database Configuration
# For local development (SQLite)
# DATABASE_URL=sqlite:///istrominventory.db

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Example PostgreSQL connection string:
# DATABASE_URL=postgresql://istrom:password123@dpg-abc123-a.oregon-postgres.render.com/istrominventory

# Application Settings
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Optional: Create sample data during bootstrap
CREATE_SAMPLE_DATA=false

# Optional: Enable debug logging
DEBUG=false

# Optional: Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=300
